<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/itemImageIv"
        android:layout_width="69dp"
        android:layout_height="40dp"

        android:layout_marginTop="2dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:srcCompat="@color/purple_200" />

    <TextView
        android:id="@+id/itemNameTv"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_toEndOf="@+id/itemImageIv"
        android:layout_toRightOf="@+id/itemImageIv"
        android:text="" />

    <Button
        android:id="@+id/subOneBtn"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/itemNameTv"
        android:layout_toRightOf="@+id/itemNameTv"
        android:text="-"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/itemTotalEt"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_toEndOf="@+id/subOneBtn"
        android:layout_toRightOf="@+id/subOneBtn"
        android:textAlignment="center"
        android:text="0"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/addOneBtn"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/itemTotalEt"
        android:layout_toRightOf="@+id/itemTotalEt"
        android:text="+" />
</RelativeLayout>